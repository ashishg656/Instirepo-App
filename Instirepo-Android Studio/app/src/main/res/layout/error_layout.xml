<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/connection_error_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/z_white"
    android:clickable="true"
    android:orientation="vertical"
    android:visibility="gone" >

    <LinearLayout
        android:id="@+id/connectionfailedimagelayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/z_margin_xlarge"
            android:src="@drawable/connection_error_cloud" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/z_margin_small"
            android:gravity="center"
            android:text="Looks like there is some error in connection\nPlease check your internet connection"
            android:textColor="@color/z_red_color_primary" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/opensettingslayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/z_margin_mini"
                android:src="@drawable/connection_error_settings" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/z_margin_medium"
                android:layout_marginTop="@dimen/z_margin_small"
                android:gravity="center"
                android:text="Open Settings"
                android:textColor="@color/z_green_color_primary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/retrylayoutconnectionerror"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/z_margin_mini"
                android:src="@drawable/connection_error_retry" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/z_margin_medium"
                android:layout_marginTop="@dimen/z_margin_small"
                android:gravity="center"
                android:text="Retry"
                android:textColor="@color/PrimaryColor" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>