<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/z_white"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/z_margin_large" >

            <com.instirepo.app.widgets.CircularImageView
                android:id="@+id/circularimage"
                android:layout_width="@dimen/z_seen_by_uploader_image_height"
                android:layout_height="@dimen/z_seen_by_uploader_image_height"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/z_margin_small"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/uploadrname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ashish Goel"
                            android:textColor="@color/z_text_color_dark"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 days ago"
                            android:textColor="@color/z_text_color_light"
                            android:textSize="@dimen/z_font_supermini" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/z_margin_mini"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center" >

                        <ImageView
                            android:layout_width="@dimen/z_margin_large"
                            android:layout_height="@dimen/z_margin_large"
                            android:src="@drawable/flag_button_selector" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/z_margin_large"
                    android:layout_marginTop="@dimen/z_margin_supermini"
                    android:text="Ashish Goel commented this line out He is best known as an early employee and key technical contributor at the original Napster, the file-sharing service created by"
                    android:textColor="@color/z_text_color_dark" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="10dp"
        android:background="@color/z_grey_shade_2" />

</LinearLayout>