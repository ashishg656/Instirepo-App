<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/z_white"
    android:foreground="?attr/selectableItemBackground"
    android:padding="@dimen/z_margin_medium" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/batchimage1"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="@dimen/z_margin_large"
            android:background="@drawable/create_post_visibility_bg"
            android:padding="@dimen/z_margin_small"
            android:scaleType="centerInside"
            android:src="@drawable/post_branch" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="Hello"
            android:textColor="@color/z_text_color_dark"
            android:textSize="@dimen/z_font_mini" />
    </LinearLayout>

</FrameLayout>