<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="-2dp"
    android:layout_marginRight="-2dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/viewmorelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center"
        android:paddingBottom="@dimen/z_margin_medium"
        android:paddingLeft="@dimen/z_margin_medium"
        android:paddingRight="@dimen/z_margin_medium"
        android:paddingTop="@dimen/z_margin_medium" >

        <TextView
            android:id="@+id/viewmorehading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:includeFontPadding="false"
            android:text="Trending Products"
            android:textColor="@color/z_text_color_dark"
            android:textSize="@dimen/z_font_mini"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:includeFontPadding="false"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="2dp"
            android:text="MORE"
            android:textColor="@color/PrimaryColor"
            android:textSize="@dimen/z_font_mini"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/postsbyreachersrecyclef"
        android:layout_width="match_parent"
        android:layout_height="@dimen/product_Category_list_height"
        android:layout_marginTop="4dp"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/z_margin_small"
        android:paddingRight="@dimen/z_margin_mini"
        android:scrollbars="none" />

    <TextView
        android:id="@+id/shopbyCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/z_margin_medium"
        android:layout_marginTop="22dp"
        android:includeFontPadding="false"
        android:paddingLeft="@dimen/z_margin_medium"
        android:paddingRight="@dimen/z_margin_medium"
        android:text="Shop By Categories"
        android:textColor="@color/z_text_color_dark"
        android:textSize="@dimen/z_font_mini"
        android:textStyle="bold" />

</LinearLayout>