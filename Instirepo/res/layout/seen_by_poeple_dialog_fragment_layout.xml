<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/z_black_50_alpha"
    android:clickable="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/z_margin_large"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="@dimen/z_margin_large"
        android:background="@drawable/ic_dialog_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/z_margin_medium"
            android:text="Seen By"
            android:textColor="@color/z_text_color_medium_dark"
            android:textSize="@dimen/z_font_small"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/z_grey_shade_2" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/postsbyreachersrecyclef"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include layout="@layout/error_layout" />

            <include layout="@layout/progress_layout" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/z_grey_shade_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/z_margin_mini" >

            <TextView
                android:id="@+id/okbuttonseen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:padding="@dimen/z_margin_small"
                android:text="OK"
                android:textColor="@color/PrimaryColor" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>