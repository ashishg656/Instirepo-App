<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainlayoutsavevis"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="24dp" >

    <ImageView
        android:id="@+id/batchimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/z_margin_large"
        android:background="@drawable/create_post_visibility_bg"
        android:padding="@dimen/z_margin_large"
        android:scaleType="centerInside"
        android:src="@drawable/ic_people" />

    <TextView
        android:id="@+id/savename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Public"
        android:textColor="@color/z_text_color_dark"
        android:textSize="@dimen/z_font_supermini"
        android:textStyle="bold" />

</LinearLayout>